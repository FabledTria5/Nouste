<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.nouste.fragments.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/openNote"
            app:destination="@id/noteFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.nouste.fragments.NoteFragment"
        android:label="NoteFragment" >
        <argument
            android:name="noteId"
            app:argType="integer" />
        <action
            android:id="@+id/returnToHome"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/popToHome"
            app:destination="@+id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>